<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    
        <ImageView android:id="@+id/avenue_highways_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avenue"/>

        <TextView android:id="@+id/avenue_highways_title"
            android:textSize="25sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avenue_highways_icon"
            android:text="Av. 9 de Julio"/>

        <TextView android:id="@+id/avenue_highways_from"
            android:textSize="16sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenue_highways_title"
            android:paddingLeft="33dp"
            android:text="Hacia Norte"/>

        <ImageView android:id="@+id/avenue_highways_from_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_status"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avenue_highways_title"
            android:paddingRight="30dp"
            android:paddingTop="2dp"/>

         <TextView android:id="@+id/avenue_highways_from_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenue_highways_title"
            android:layout_toLeftOf="@id/avenue_highways_from_status"
            android:paddingRight="5dp"
            android:text="Todo ferfecto!"/>

        <TextView android:id="@+id/avenue_highways_to"
            android:textSize="16sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenue_highways_from"
            android:paddingLeft="33dp"
            android:text="Hacia Sur"/>

        <ImageView android:id="@+id/avenue_highways_to_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_status"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avenue_highways_from_status"
            android:paddingRight="30dp"
            android:paddingTop="6dp"/>

         <TextView android:id="@+id/avenue_highways_to_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenue_highways_from_text"
            android:layout_toLeftOf="@id/avenue_highways_to_status"
            android:paddingRight="5dp"
            android:text="Todo mal!"/>
    </RelativeLayout>

</LinearLayout>